---
import ProjectCard from './ProjectCard.astro';
import { portfolioData } from '../data/portfolio';
import ringsImage from '../assets/images/rings_with_circle.svg';
---

<section class="relative mx-auto px-4 py-[7.75rem] max-w-[75rem] z-10" id="portfolio">
  <div class="relative mb-[4.1875rem] text-center z-0">
    <div class="absolute top-[-2.875rem] md:top-[-1.875rem] left-[50%] w-[25.875rem] md:w-[17.25rem] h-[28.0125rem] md:h-[18.675rem] transform -translate-x-[20.6rem] md:-translate-x-[13.625rem] z-0">
      <img 
        src={ringsImage.src}
        alt="Декоративные кольца" 
        class="w-full h-full object-contain"
        loading="eager"
        width={ringsImage.width}
        height={ringsImage.height}
      />
    </div>
    <h2 class="font-mv-skifer text-[4.6875rem] md:text-[3.125rem] leading-[1.24] tracking-[0.01em] relative z-10">Портфолио</h2>
  </div>

  <div class="relative z-10 gap-[2.71875rem] md:gap-[1.8125rem] grid grid-cols-1 md:grid-cols-2 mx-auto max-w-[70.65625rem] md:max-w-full">
    {portfolioData.map((project, index) => (
      <ProjectCard 
        project={project} 
        index={index}
      />
    ))}
  </div>
</section>